<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <TextView
        android:id="@+id/edit_title_label"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/book_title_label" />

    <EditText
        android:id="@+id/edit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/editText_title_label"
        android:inputType="text" />

    <TextView
        android:id="@+id/edit_author_label"
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:text="@string/book_author_label" />

    <EditText
        android:id="@+id/edit_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/editText_author_label"
        android:inputType="text" />

</LinearLayout>
